{
  "extends": "expo/tsconfig.base",
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/"],
  "baseUrl": "",
  "composite": true,
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components/*": ["src/components"],
      "@hooks/*": ["src/hooks"],
      "@lib/*": ["src/lib"],
      "@screens/*": ["src/screens"],
      "@coral-xyz/recoil": ["../recoil"],
      "@coral-xyz/common": ["../common"],
      "@coral-xyz/background": ["../background"]
    }
  },
  "references": [
    { "path": "../recoil" },
    { "path": "../common" },
    { "path": "../background" }
  ]
}
